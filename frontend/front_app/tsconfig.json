{
  "extends": "./.quasar/tsconfig.json",
  "compilerOptions": {
      "baseUrl": ".",
      "paths": {
          "@/*": [
              "src/*"
          ],
          "~/*": [
              "src/utils/*"
          ]
      },
      "allowJs": false,
      // `baseUrl` must be placed on the extending configuration in devland, or paths won't be recognized
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "moduleDetection": "force",
      // Needed to address https://github.com/quasarframework/app-extension-typescript/issues/36
      "noEmit": true,
      "resolveJsonModule": true,
      // Avoid cross-os errors due to inconsistent file casing
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "strict": true,
      "target": "esnext",
      "isolatedModules": true,
      "useDefineForClassFields": true,
      "checkJs": false,
      "removeComments": true,
      "noImplicitAny": false,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "preserveConstEnums": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "skipLibCheck": true,
      "exactOptionalPropertyTypes": false,
      "jsx": "preserve",
      "types": [
          "node",
          "vite/client",
      ],
      "typeRoots": [
          "src/*.d.ts",
          "./node_modules/@types/",
          "./models",
          "./node_modules",
      ],
      "outDir": "./ts-out-dir",
      "lib": [
          "WebWorker",
          "ESNext",
          "DOM"
      ]
  },
  "include": [
      "src",
      "src/*.d.ts",
      "vite.config.ts",
      "auto-imports.d.ts"
  ],
  "exclude": [
      "./dist",
      "./.quasar",
      "./node_modules",
      "./src-capacitor",
      "./src-cordova",
      "./quasar.config.*.temporary.compiled*"
  ]
}
